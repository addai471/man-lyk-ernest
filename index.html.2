            .hero h1 { font-size: 2.5rem; }
            nav { padding: 20px; flex-direction: column; gap: 10px; }
            .nav-links a { margin: 0 10px; }
            .btn { width: 100%; margin: 10px 0 0 0; justify-content: center; }
        }
    </style>
</head>
